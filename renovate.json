{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "packageRules": [
        {
            "matchPackagePatterns": [
                "^aws-",
                "^serde_dynamo$"
            ],
            "groupName": "aws"
        }
    ],
    "regexManagers": [
        {
            "fileMatch": ["^Cargo\\.toml$"],
            "matchStrings": [
                "\"aws-sdk-dynamodb\\+(?<currentValue>\\d+_\\d+)\""
            ],
            "versioningTemplate": "loose",
            "autoReplaceStringTemplate": "\"aws-sdk-dynamodb\\+{{{newMajor}}}_{{{newMinor}}}\"",
            "depNameTemplate": "aws-sdk-dynamodb",
            "datasourceTemplate": "crate"
        }
    ]
}
